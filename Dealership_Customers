 --Query for Cameo Trade List


SELECT CODE, NAME, TRLIST1, TRLIST2, TRLIST3, TRLIST4, TRLIST5,
CASE 
    WHEN TRLIST1 IN (3, 8, 9, 11, 84) OR TRLIST2 IN (3, 8, 9, 11, 84) OR TRLIST3 IN (3, 8, 9, 11, 84) OR TRLIST4 IN (3, 8, 9, 11, 84) OR TRLIST5 IN (3, 8, 9, 11, 84) THEN
        CONCAT(
            CASE WHEN TRLIST1 = 3  OR TRLIST2 = 3  OR TRLIST3 = 3  OR TRLIST4 = 3  OR TRLIST5 = 3  THEN 'Maxam Dealer Prices, ' ELSE '' END,
            CASE WHEN TRLIST1 = 8  OR TRLIST2 = 8  OR TRLIST3 = 8  OR TRLIST4 = 8  OR TRLIST5 = 8  THEN 'Sailun Dealer Prices, ' ELSE '' END,
            CASE WHEN TRLIST1 = 9  OR TRLIST2 = 9  OR TRLIST3 = 9  OR TRLIST4 = 9  OR TRLIST5 = 9  THEN 'Sailun & Alliance Dealer Prices, ' ELSE '' END,
            CASE WHEN TRLIST1 = 11 OR TRLIST2 = 11 OR TRLIST3 = 11 OR TRLIST4 = 11 OR TRLIST5 = 11 THEN 'Sailun -2% & Alliance Dealer Prices, ' ELSE '' END,
			CASE WHEN TRLIST1 = 84 OR TRLIST2 = 84 OR TRLIST3 = 84 OR TRLIST4 = 84 OR TRLIST5 = 84 THEN 'Bridgestone Dealer Prices' ELSE '' END
        )
    ELSE '' 
END AS Cameo_Trade_List,
REP
FROM CUSTOMER

WHERE CODE IN (
'DMHTYR01', 'DONSIDET', 'DRTYRES', 'M60TYRES', 'NESSCITY', 'RMTYRES', 'TARGETAU', 'TOBY', 'TYREMECH', 'VALLEYMO', 'TYRECRAF', 'ANGUSTYR', 'EXPRESSL', 'DTTYRES', 'FLEETL01', 
'MIDBEDS', 'MELTONMO', 'CTSSPALD', 'PONTARDA', 'DORSET', 'SOMERSET', 'TYREPOW2', 'ELSEYT', 'SMJTYR01', 'FIXNFIT', 'FORTWILL', 'HOLDERNE', 'INVERNES', 'CUMBRIA', 'NEWTOWNP', 
'DRAYTO01', 'TYREFIND', 'EVANSTYR', 'FARMBORO', 'LOUTHTYR', 'NOTTINGH', 'TYREMAI3', 'PAULSTYR', 'PENCOED', 'RAPIDRUB', 'ST TYRES', 'COLLINST', 'SCSTYRE', 'TYRERECO', 'TAWSE TY', 
'NEWBRIDG', 'ONSITET3', 'DRAXTYRE', 'JATYRES', 'RYANSTYR', 'ROSSENDA', 'JADETYRE', 'BRITISH', 'CAPITALT', 'NTSNORTH', 'HAVERS T', 'REDLYNCH', 'GALEFORC', 'JAJSAWBR', 'FAROL LT', 
'SOLTYRE', 'MILL TYR', 'EVESHAM', 'GFTYRES', 'MATYRES', 'MQMOBI01', 'BNJTYRES', 'TYRETEAM', 'INVERGOR', 'QUICKSHI', 'PEDROS', 'GOREFARM', 'CROWMEC', 'HAMILTON', 'POTTERIE', 
'NORTONS', 'COLIN TY', 'AIROWOR', 'SHIRETY', 'RAMBOSTY', 'S108', 'OAKWOOD', 'HEXHAMTY', 'WALBOTTL', 'WOODTON', 'WGTYRES', 'CRESTTYR', 'EAGLETYR', 'TRUCK2U', 'MMPTYRE', 'X031', 
